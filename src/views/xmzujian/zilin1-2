// å…³é—­é¡µé¢çš„æ–¹æ³•
const close = () => {
  isVisible.value = false;
  emit('close');
};

// é‡æ–°æ‰“å¼€é¡µé¢çš„æ–¹æ³•
const show = () => {
  isVisible.value = true; // æ¯æ¬¡è°ƒç”¨æ—¶é‡æ–°è®¾ç½®ä¸º true
  // iframeSrc.value = initialUrl; // ä¸å†éœ€è¦é‡ç½® URL
};

